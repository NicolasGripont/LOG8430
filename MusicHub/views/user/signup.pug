extends ../layouts/simple-layout



block content
    form.form-signin
        h2.form-signin-heading Please sign up
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', placeholder='Email address', required='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', placeholder='Password', required='')
        label.sr-only(for='reInputPassword') Password
        input#reInputPassword.form-control(type='password', placeholder='Re-enter Password', required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up
        a(href='/views/signin') Sign In
    .alert.alert-success
    .alert.alert-danger

block scripts
     script(src='/javascripts/signup.js')
